 <% layout("/layouts/boilerplate") %>

 
  <style>
    /* Filter section styles */
    #allfilter {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter {
      text-align: center;
      opacity: 0.7;
      margin-top: 2rem;
      margin-right: 2.1rem;
    }

    .filter:hover{
      opacity: 1;
      cursor: pointer;
    }
    .filter p{
      font-size: 0.7rem;
    }
    .tax-info{
      display: none;

    }
    .tax-toggle{
      border: 1px solid black;
      border-radius: 10px;
      height: 3rem;
      padding: 1rem;
      display: flex;
      align-items: center;
      margin-left: 2rem;
    }
  </style>
 

 

  <!-- FILTER SECTION -->
  <div class="container">
    <div id="allfilter">
      <div class="filter"><i class="fa-solid fa-fire fa-lg"></i><p>Trending</p></div>
      <div class="filter"><i class="fa-solid fa-bed fa-lg"></i><p>Rooms</p></div>
      <div class="filter"><i class="fa-solid fa-mountain-city fa-lg"></i><p>Iconic cities</p></div>
      <div class="filter"><i class="fa-solid fa-campground fa-lg"></i><p>Camping</p></div>
      <div class="filter"><i class="fa-brands fa-fort-awesome fa-lg"></i><p>Castles</p></div>
      <div class="filter"><i class="fa-solid fa-cow fa-lg"></i><p>Farms</p></div>
      <div class="filter"><i class="fa-solid fa-mountain fa-lg"></i><p>Mountains</p></div>
      <div class="filter"><i class="fa-solid fa-person-swimming"></i><p>Amazing Pools</p></div>
      <div class="filter"><i class="fa-solid fa-snowflake fa-lg"></i><p>Arctic</p></div>
      <div class="filter"><i class="fa-solid fa-igloo"></i><p>Domes</p></div>
      <div class="filter"><i class="fa-solid fa-sailboat"></i><p>Boats</p></div>
      <div class="tax-toggle"> 
         <div class="form-check-reverse form-switch">
       <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
       <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
      </div>
      </div>
    
    </div>
  </div>

  <!-- LISTING CARDS SECTION -->
  <div class="container">
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% for (lists of allList) { %>
        <div class="col">
          <a href="/listings/<%= lists.id %>" class="listing-link">
            <div class="card listing-card">
              <img src="<%= lists.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
              <div class="card-body">
                <p class="card-text">
                  <b><%= lists.title %><br></b>
                  â‚¹ <%= lists.price ? lists.price.toLocaleString("en-IN") : "N/A" %> /night
                  <i class="tax-info">&nbsp;&nbsp; 18% GST </i>
                 
                </p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>

 <script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click",()=>{
    let taxInfo = document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display != "inline"){
        info.style.display = "inline"
      }else{
        info.style.display = "none";
      }
    }
  })
 </script>

 
 